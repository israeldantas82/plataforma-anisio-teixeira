{
    "phpcs.executablePath": "/usr/bin/phpcs",
    "phpcs.composerJsonPath": "composer.json",
    "phpcs.enable": true,
    "phpcs.standard": "PSR2",
    "editor.renderWhitespace": "all",
    "editor.renderIndentGuides": true,
    "autoimport.autoComplete": true,
    "files.eol": "\n",
    "auto-close-tag.enableAutoCloseTag": true,
    "auto-close-tag.activationOnLanguage": [
        "xml",
        "php",
        "blade",
        "ejs",
        "jinja",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "plaintext",
        "markdown",
        "vue",
        "liquid",
        "erb",
        "lang-cfml",
        "cfml",
        "HTML (Eex)"
    ],
    "css.fileExtensions": [
        "css",
        "scss"
    ],
    "editor.fontSize": 16,
}