/*
$primary   = #08275e
$secondary = #424242
$accent    = #451e5f
$positive  = #4BBEAB
$negative  = #B05552
$info      = #35586A
$warning   = #D6B476
$light     = #bdbdbd
$dark      = #04091f
$faded     = #777
*/

$primary   = #066ab1
$secondary = #5698e3
$accent    = #004081

$light     = #5698e3
$dark      = #004081
$positive  = #3cac3d
$negative  = #cc2726
$info      = #3871c1
$warning   = #e9ba1a
$light     = #bdbdbd
$faded     = #e1e2e1

$petecavermelho  = $negative
$petecaamarelo   = $warning
$petecaazul      = $info 
$petecaverde     = $positive


.bg-cinza
  background: $faded !important 

.bg-light
  background-color: $light !important

.bg-dark
  background-color: $dark !important

.bg-petecavermelho
  background-color: $petecavermelho !important;

.bg-petecaamarelo
  background-color: $petecaamarelo !important;

.bg-petecaazul
  background-color: $petecaazul !important;

.bg-petecaverde
  background-color: $petecaverde !important;

.active-link-pat
  background-color: $primary
  color: #fff !important

$input-text-color         = $primary;
$input-label-color        = $accent;

$generic-border-radius    = 3px;
$body-font-size          ?= 14px
$quasar-dont-import-fonts = true;

@font-face {
  font-family: 'Ubuntu';
  font-display: swap;
  src: url(./fonts/Ubuntu-Regular.woff2);
}

@font-face {
  font-family: 'Lato';
  font-display: swap;
  src: url(./fonts/Lato-Regular.woff2);
}

$headings ?= {
  h1: {
    size: 4rem,
    line-height: 4rem,
    weight: 400,
    letter-spacing: -.01362em
  },
  h2: {
    size: 3.5rem,
    line-height: 3.5rem,
    letter-spacing: -.00833em,
    weight: 400
  },
  h3: {
    size: 3rem,
    line-height: 3.125rem,
    letter-spacing: normal,
    weight: 500
  },
  h4: {
    size: 2.125rem,
    line-height: 2.5rem,
    letter-spacing: .00735em,
    weight: 500
  },
  h5: {
    size: 1.5rem,
    line-height: 2rem,
    letter-spacing: normal,
    weight: 500
  },
  h6: {
    size: 1.25rem,
    line-height: 1.75rem,
    letter-spacing: .0125em,
    weight: 500
  },
  subtitle1: {
    size: 1rem,
    line-height: 1.75rem,
    letter-spacing: .00937em,
    weight: 500
  },
  subtitle2: {
    size: .870rem,
    line-height: 1.375rem,
    letter-spacing: .00714em,
    weight: 500
  },
  body1: {
    size: 1rem,
    line-height: 1.5rem,
    letter-spacing: .03125em,
    weight: 400
  },
  body2: {
    size: .875rem,
    line-height: 1.25rem,
    letter-spacing: .01786em,
    weight: 400
  },
  overline: {
    size: .75rem,
    line-height: 2rem,
    letter-spacing: .16667em,
    weight: 500
  },
  caption: {
    size: .75rem,
    line-height: 1.25rem,
    letter-spacing: .03333em,
    weight: 700
  }
}

$h-tags ?= {
  h1: $headings.h1,
  h2: $headings.h2,
  h3: $headings.h3,
  h4: $headings.h4,
  h5: $headings.h5,
  h6: $headings.h6
}

$text-weights ?= {
  thin: 300,
  light: 300,
  regular: 400,
  medium: 500,
  bold: 700,
  bolder: 700
}

$typography-font-family         ?= 'Ubuntu', '-apple-system', Helvetica, Arial, sans-serif
$toolbar-min-height             ?= 55px

.title-page-tipos
  font-family: 'Lato', sans-serif, cursive;
  font-weight: 700 !default;
  padding-bottom : 5px;
  border-bottom: 4px double $accent;
  font-display: swap;

body
  font-family: $typography-font-family;
  font-weight: 500 !default;
  font-display: swap;
  color: #263238;

@import '~quasar/src/css/variables.styl'
